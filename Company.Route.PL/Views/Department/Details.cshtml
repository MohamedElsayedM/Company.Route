@model Department

@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>
<br />
<br />

<div>
    <div class="my-4">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" readonly/>
    </div>
    <div class="my-4">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>

    </div>
    <div class="my-4">
        <label asp-for="CreationAt" class="col-form-label"></label>
        <input asp-for="CreationAt" class="form-control" readonly/>
    </div>
    <div class="my-4">
        <a asp-action="Edit" class="btn btn-warning text-decoration-none">Edit</a>
        <a asp-action="Index" class="btn btn-light text-decoration-none">Back to list</a>
    </div>
</div>

